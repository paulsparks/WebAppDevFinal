@model List<Recipe>
@{
    ViewData["Title"] = "Home";
}

<h1 style="margin-bottom: 30px;">Recipes</h1>

<div class=" container">
    <div class="row">
        @for (int i = 0; i < Model.Count; i++)
{
            <div class="col-12 col-lg-6 col-xxl-4">
                <div class="card" style="width: 24rem; margin-bottom: 30px;">
            @if (Model[i].ImagePath != null)
            {
                        <img src="@Model[i].ImagePath" class="card-img-top img-fluid">
            }
                    <div class="card-body">
                        <h5 class="card-title">@Model[i].Name</h5>
                        <p style="color: grey;" class="card-text text-truncate">@Model[i].Description</p>
                        <a asp-controller="Home" asp-action="Recipe" asp-route-id="@Model[i].RecipeId"
                            asp-route-slug="@Model[i].Slug" class="btn btn-primary">See Recipe</a>
                    </div>
                </div>
            </div>
}
    </div>
    </div>
