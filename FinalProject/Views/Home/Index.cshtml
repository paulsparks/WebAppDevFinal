@model List<Recipe>
@{
    ViewData["Title"] = "Home";
}

<h1>Recipes</h1>

<div class="container">
    @for (int i = 0; i < Model.Count; i++)
    {
        if (i % 3 == 0)
        {
            if (i != 0)
            {
                @:</div>
            }
            @:<div class="row">
        }
        
        <div class="col-md-4">
            <div class="card" style="width: 18rem;">
                @if (Model[i].ImagePath != null) {
                    <img src="@Model[i].ImagePath" class="card-img-top">
                }
                <div class="card-body">
                    <h5 class="card-title">@Model[i].Name</h5>
                    <p style="color: grey;" class="card-text text-truncate">@Model[i].Description</p>
                    <a asp-controller="Home" asp-action="Recipe" asp-route-id="@Model[i].RecipeId"
                        asp-route-slug="@Model[i].Slug" class="btn btn-primary">See Recipe</a>
                </div>
            </div>
        </div>

        @if (i == Model.Count - 1)
        {
            @:</div>
        }
    }
</div>
